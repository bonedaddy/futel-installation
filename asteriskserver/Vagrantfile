# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

  # we only run one machine, but define a name so we can deploy to different
  # providers
  config.vm.define "foo"

  config.ssh.private_key_path = "~/.ssh/id_rsa"

  # to bootstrap from test_32 to centos6_32_baseinstall
  #config.vm.box = "test_32"
  #config.vm.provision :shell, :path => "centos6_32_baseinstall.sh" 
  # XXX then fix_package.sh, see README

  # to bootstrap from centos6_32_baseinstall
  config.vm.box = "centos6_32_baseinstall"
  config.vm.provision :shell, :path => "bootstrap.sh"

  config.vm.provider :virtualbox do |vb|
    # Don't boot with headless mode
    # vb.gui = true
    # bridged network, probably specific setup for each host
    config.vm.network :public_network, :bridge => 'wlan0'
  end

end
